<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/page_bg"
    android:orientation="vertical"
    tools:context=".cardDetail.tabs.detailInfo.DetailInfoFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                app:cardBackgroundColor="@color/cardview_bg"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:src="@drawable/ic_user_white" />

                        <com.jeremy.android.consumer.view.XEditText
                            android:id="@+id/edt_user_name"
                            android:layout_width="0dp"
                            android:layout_height="42dp"
                            android:layout_marginLeft="12dp"
                            android:layout_weight="1"
                            android:background="@drawable/white_full_round_bg"
                            android:drawablePadding="5dp"
                            android:drawableRight="@drawable/ic_clear_black"
                            android:gravity="center_vertical"
                            android:hint="@string/hint_input_userName"
                            android:inputType="textPersonName"
                            android:padding="4dp"
                            android:singleLine="true"
                            android:textColorHint="@color/gray" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_card_no"
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:src="@drawable/ic_card_white" />

                        <com.jeremy.android.consumer.view.XEditText
                            android:id="@+id/edt_card_no"
                            android:layout_width="0dp"
                            android:layout_height="42dp"
                            android:layout_marginLeft="12dp"
                            android:layout_weight="1"
                            android:background="@drawable/white_full_round_bg"
                            android:drawablePadding="5dp"
                            android:drawableRight="@drawable/ic_clear_black"
                            android:gravity="center_vertical"
                            android:hint="@string/hint_input_cardNo"
                            android:inputType="text"
                            android:maxLength="11"
                            android:padding="4dp"
                            android:singleLine="true"
                            android:textColorHint="@color/gray" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:src="@drawable/ic_phone_white" />

                        <com.jeremy.android.consumer.view.XEditText
                            android:id="@+id/edt_user_phone"
                            android:layout_width="0dp"
                            android:layout_height="42dp"
                            android:layout_marginLeft="12dp"
                            android:layout_weight="1"
                            android:background="@drawable/white_full_round_bg"
                            android:drawablePadding="5dp"
                            android:drawableRight="@drawable/ic_clear_black"
                            android:gravity="center_vertical"
                            android:hint="@string/hint_input_userPhone"
                            android:inputType="phone"
                            android:padding="4dp"
                            android:singleLine="true"
                            android:textColorHint="@color/gray" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:src="@drawable/ic_home_white" />

                        <com.jeremy.android.consumer.view.XEditText
                            android:id="@+id/edt_user_addr"
                            android:layout_width="0dp"
                            android:layout_height="42dp"
                            android:layout_marginLeft="12dp"
                            android:layout_weight="1"
                            android:background="@drawable/white_full_round_bg"
                            android:drawablePadding="5dp"
                            android:drawableRight="@drawable/ic_clear_black"
                            android:gravity="center_vertical"
                            android:hint="@string/hint_input_userAddr"
                            android:padding="4dp"
                            android:singleLine="true"
                            android:textColorHint="@color/gray" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:src="@drawable/ic_expired_white" />

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="42dp"
                            android:layout_marginLeft="12dp"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/tv_card_expired"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:layout_toLeftOf="@+id/btn_show_dp_dialog"
                                android:gravity="center"
                                android:singleLine="true"
                                android:text="2016/05/23 05:33:01"
                                android:textColor="@color/white"
                                android:textSize="18sp" />

                            <Button
                                android:id="@+id/btn_show_dp_dialog"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:gravity="center"
                                android:text="@string/setting" />
                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:visibility="invisible" />

                        <EditText
                            android:id="@+id/edt_memo"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:layout_weight="1"
                            android:background="@drawable/white_full_round_bg"
                            android:enabled="true"
                            android:gravity="top"
                            android:hint="@string/hint_input_memo"
                            android:inputType="textMultiLine"
                            android:minLines="3"
                            android:padding="4dp"
                            android:textColorHint="@color/gray" />

                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="@string/current_score"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_point"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="4dp"
                        android:layout_toLeftOf="@+id/hint_score"
                        android:text="40000"
                        android:textColor="@color/red_dark"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/hint_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="@string/score"
                        android:textColor="@color/black"
                        android:textSize="18sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="@string/current_price"
                        android:textColor="@color/black"
                        android:textSize="18sp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="4dp"
                        android:layout_toLeftOf="@+id/tv_current_price"
                        android:text="Â¥"
                        android:textColor="@color/red_dark"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_current_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_toLeftOf="@+id/hint_yuan"
                        android:text="200.00"
                        android:textColor="@color/red_dark"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/hint_yuan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="@string/yuan"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
